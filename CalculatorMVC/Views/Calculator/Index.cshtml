@{
    ViewData["Title"] = "Calculator";
}
<div class="error-message" style="color: red;"></div>

<div class="calculator">
    <div class="display">
        <div class="preview"></div>
        <div class="operand">0</div>
    </div>
    <div class="buttons">
        <div class="row">
            <button class="btnNum">1</button>
            <button class="btnNum">2</button>
            <button class="btnNum">3</button>
            <button id="btnDivide">/</button>
        </div>
        <div class="row">
            <button class="btnNum">4</button>
            <button class="btnNum">5</button>
            <button class="btnNum">6</button>
            <button id="btnMultiply">*</button>
        </div>
        <div class="row">
            <button class="btnNum">7</button>
            <button class="btnNum">8</button>
            <button class="btnNum">9</button>
            <button id="btnMinus">-</button>
        </div>
        <div class="row">
            <button id="btn0">0</button>
            <button id="btnDot">.</button>
            <button id="btnEquals">=</button>
            <button id="btnPlus">+</button>
        </div>
        <div class="row">
            <button id="btnC">C</button>
            <button id="btnCE">CE</button>
        </div>
    </div>
</div>
<script src="~/js/calculator.js" asp-append-version="true"></script>